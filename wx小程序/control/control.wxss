.gridbox {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15px;
  padding: 20px;
  background-color: rgba(255,255,255,0.8);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  margin: 15px;
}

.item {
  aspect-ratio: 1/1;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  transition: all 0.1s ease;
  border: 2px solid rgba(255,255,255,0.3);
}

.hoveritem {
  transform: scale(0.9);
  opacity: 0.8;
}
